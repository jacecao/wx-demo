.post-info {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.post-info .post-author-log {
  height: 40px;
  width: 40px;
  background-color: pink;
  border: 1px solid #999;
  border-radius: 50%;
  margin: 0 20px; 
}

.post-info .post-author-date {
  margin-left: 30px;
  font-size: 24rpx;
}

.post-title {
  margin: 10px 0 10px 20px;
  font-size: 30rpx;
}

.post-image {
  height: 300rpx;
  width: 100%;
  background-color: #ededed;
}

.post-desc {
  font-size: 26rpx;
  padding: 0 20px;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}

.post-like {
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 24rpx;
  margin-top: 10px;
}

.post-like image {
  width: 16px;
  height: 16px;
  background-color: #ededed;
}

.post-like text {
  margin:0 10px 0 6px;
}