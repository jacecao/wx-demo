.post-image {
  height: 300rpx;
  width: 100%;
  background-color: #ededed;
}

.post-title {
  display: block;
  margin: 12px 0 0 20px;
  font-size: 40rpx;
}

.post-info {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 10px 0;
}
.post-info .post-author-name {
  font-size: 26rpx;
}

.post-info .post-author-log {
  height: 24px;
  width: 24px;
  background-color: pink;
  border: 1px solid #999;
  border-radius: 50%;
  margin: 0 20px; 
}

.post-info .post-author-date {
  margin-left: 30px;
  font-size: 24rpx;
}


.post-content {
  font-size: 26rpx;
  padding: 0 20px;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}

.post-tool {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  font-size: 24rpx;
  margin: 20px 0 0 20px;
}

.post-tool .buttons {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.post-tool image {
  width: 24px;
  height: 24px;
  background-color: #ededed;
  border-radius: 24px;
  margin-left: 12px;
}

.post-tool text {
  margin:0 10px;
}